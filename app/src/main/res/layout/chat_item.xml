<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/defaultavatar"
        android:id="@+id/photoImageView"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
         />

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:textSize="17sp"
        android:background="@drawable/message_text_background"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        tools:text="Message"
        android:layout_alignTop="@id/photoImageView"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/photoImageView" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/photoImageView"
        android:textColor="#000000"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_alignStart="@id/photoImageView"
        android:textStyle="bold"
        tools:text="Name" />

</RelativeLayout>