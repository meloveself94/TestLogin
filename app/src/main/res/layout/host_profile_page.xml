<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:src="http://schemas.android.com/tools">


    <RelativeLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/gradient_color2">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/layoutTop" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            src:text="Name: Martin Ludagrez"
            android:layout_marginTop="75dp"
            android:textSize="20sp"
            android:id="@+id/view_name"
            android:textColor="#000000"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            src:text="Gender : Male"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            android:textSize="20sp"
            android:id="@+id/view_gender"
            android:layout_below="@id/view_name"
            android:textColor="#000000"
            android:layout_marginEnd="15dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            src:text="This host has not include their occupation"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            android:textSize="20sp"
            android:id="@+id/view_occupation"
            android:layout_below="@id/view_gender"
            android:textColor="#000000"
            android:layout_marginEnd="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            src:text="This host has not select a country"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            android:textSize="20sp"
            android:id="@+id/view_country"
            android:layout_below="@id/view_occupation"
            android:textColor="#000000"
            android:layout_marginEnd="15dp"
            />



    </RelativeLayout>

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/defaultavatar"
        app:siRadius="6dp"
        app:siBorderWidth="0.3dp"
        app:siBorderColor="#424242"
        android:layout_above="@id/layoutBottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-36dp"
        android:adjustViewBounds="true"
        android:id="@+id/view_pic"
        app:siSquare="true"
        android:elevation="3dp"/>



</RelativeLayout>