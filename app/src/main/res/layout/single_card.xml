<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="8dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/placeholder_image"
        android:scaleType="centerCrop"
        android:id="@+id/trip_image"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yolo Canadian Trip"
        android:id="@+id/trip_title"
        android:layout_below="@id/trip_image"
        android:layout_marginTop="12dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trip_country"
        android:text="Country: Canada"
        android:layout_below="@id/trip_title"
        android:layout_marginTop="10dp"
        android:textColor="#424242"
        android:textSize="20sp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_centerHorizontal="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trip_price"
        android:text="Price: $ 85"
        android:layout_below="@id/trip_country"
        android:layout_marginTop="10dp"
        android:textColor="#424242"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>