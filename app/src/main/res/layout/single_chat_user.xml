<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/defaultavatar"
        android:layout_marginLeft="12dp"
        android:id="@+id/single_user_image"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_toEndOf="@id/single_user_image"
        android:layout_alignTop="@id/single_user_image"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginStart="5dp"
        android:id="@+id/single_user_name"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/single_user_name"
        android:text="Wo ai ni, ni ai wo ma noobie potato?"
        android:layout_toRightOf="@id/single_user_image"
        android:maxLines="2"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:id="@+id/single_user_message"/>

</RelativeLayout>