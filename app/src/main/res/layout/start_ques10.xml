<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finishing Touches"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:id="@+id/p10Title"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p10Content"
        android:text="@string/tenthques1"
        android:layout_below="@id/p10Title"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/p10Content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="25dp"
        android:text="Next"
        android:background="@drawable/buttshape"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:id="@+id/p10Next"/>

</RelativeLayout>