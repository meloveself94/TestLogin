<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which language will you host in?"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_margin="20dp"
        android:textSize="30sp"
        android:id="@+id/title1"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You’ll write your descriptions in this language and guests will expect you to speak it during experiences."
        android:layout_below="@id/title1"
        android:id="@+id/content1"
        android:textSize="25sp"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submission Language"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_below="@id/content1"
        android:layout_margin="20dp"
        android:id="@+id/title2"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p2Spinner1"
        android:layout_below="@id/title2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >


    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fluent in more languages?"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#000000"
        android:id="@+id/title3"
        android:layout_below="@id/p2Spinner1"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You’ll have a chance to add another language later."
        android:textSize="25sp"
        android:id="@+id/content2"
        android:layout_below="@id/title3"
        android:layout_marginStart="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/p2button1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/buttshape"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"/>

</RelativeLayout>