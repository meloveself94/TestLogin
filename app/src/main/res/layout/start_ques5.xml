<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add photos for your experience"
        android:textStyle="bold"
        android:textSize="26dp"
        android:textColor="#000000"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/p5title1" />

    <TextView
        android:id="@+id/p5content1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fifthques1"
        android:textSize="18sp"
        android:layout_below="@id/p5title1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p5button1"
        android:layout_below="@id/p5content1"
        android:text="Choose  File"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="3dp"/>




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit  Photo"
        android:layout_toRightOf="@id/p5button1"
        android:layout_below="@id/p5content1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/p5button2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/p5next"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttshape"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/p5image"
        tools:src="@mipmap/ic_account_circle_black_24dp"
        android:layout_below="@id/p5button1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@id/p5next"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>