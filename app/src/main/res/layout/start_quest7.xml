<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p7RelativeLayout"
        android:focusableInTouchMode="true"
        android:focusable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a meeting location"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/p7Title1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seventhques1"
        android:layout_below="@id/p7Title1"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="20sp"
        android:id="@+id/p7Content1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Name"
        android:layout_below="@id/p7Content1"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:layout_marginStart="20dp"
        android:id="@+id/p7Title2"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:ems="17"
        android:layout_below="@id/p7Title2"
        android:background="@drawable/shape"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:id="@+id/p7EditBox1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country"
        android:layout_below="@id/p7EditBox1"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:textColor="#000000"
        android:id="@+id/p7Title3"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p7Spinner1"
        android:layout_below="@id/p7Title3"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Street Address"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:id="@+id/p7Title4"
        android:layout_below="@+id/p7Spinner1"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:ems="17"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape"
        android:id="@+id/p7EditBox2"
        android:layout_below="@+id/p7Title4"
        android:layout_marginTop="5dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apt, Suite, Bldg. (Optional)"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:id="@+id/p7Title5"
            android:layout_below="@+id/p7EditBox2"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:ems="17"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape"
            android:id="@+id/p7EditBox3"
            android:layout_below="@+id/p7Title5"
            android:layout_marginTop="5dp"
            />





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:textSize="20sp"
            android:layout_below="@id/p7EditBox3"
            android:layout_marginStart="20dp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:id="@+id/p7Title6"/>


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:ems="17"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape"
            android:id="@+id/p7EditBox4"
            android:layout_below="@id/p7Title6"
            android:layout_marginTop="5dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State"
            android:textSize="20sp"
            android:layout_below="@id/p7EditBox4"
            android:layout_marginStart="20dp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:id="@+id/p7Title7"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:ems="17"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape"
            android:id="@+id/p7EditBox5"
            android:layout_below="@id/p7Title7"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zip Code"
            android:textSize="20sp"
            android:layout_below="@id/p7EditBox5"
            android:layout_marginStart="20dp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:id="@+id/p7Title8"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:ems="17"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape"
            android:id="@+id/p7EditBox6"
            android:layout_below="@id/p7Title8"
            android:layout_marginTop="5dp"
            android:inputType="number"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_below="@id/p7EditBox6"
            android:layout_marginTop="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/p7Next"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="@drawable/buttshape"/>


    </RelativeLayout>






</ScrollView>